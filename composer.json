{
  "name": "lalaz/events",
  "description": "Event dispatcher with listeners, subscribers, and async queue support.",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.3",
    "lalaz/framework": "^1.0.0-rc.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0 || ^12.0",
    "lalaz/queue": "^1.0.0-rc.2",
    "lalaz/testing": "^1.0.0-rc.2"
  },
  "suggest": {
    "lalaz/queue": "Required for queue-based async event dispatching"
  },
  "autoload": {
    "psr-4": {
      "Lalaz\\Events\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Lalaz\\Events\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
